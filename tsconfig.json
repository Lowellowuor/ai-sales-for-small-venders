{
  
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler", // Or "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext" // Ensure this is set to ESNext for import.meta.env
  },
  "include": ["src"], // This is crucial for including your source files
  "exclude": ["node_modules", "dist"]
}
